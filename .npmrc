# CRITICAL: Enforce strict package isolation
# This prevents accidental root installs and phantom dependencies

# Disable hoisting to enforce explicit dependencies in each package
shamefully-hoist=false

# Enforce strict peer dependencies
strict-peer-dependencies=true

# Per-workspace lockfiles (each package has its own pnpm-lock.yaml)
shared-workspace-lockfile=false

# BLOCK accidental root installs (must cd into package directory)
# Error if trying to install in workspace root without -w flag
ignore-workspace-root-check=false

# Auto-install peers (when possible)
auto-install-peers=true

# Use isolated linker (default) for true package isolation
# DO NOT set node-linker to hoisted - let pnpm use default isolated mode
