apiVersion: v1
kind: Service
metadata:
  name: loki
  labels:
    app: loki
    component: monitoring
spec:
  type: ClusterIP
  ports:
  - name: http-metrics
    port: 3100
    targetPort: 3100
    protocol: TCP
  - name: grpc
    port: 9095
    targetPort: 9095
    protocol: TCP
  selector:
    app: loki
